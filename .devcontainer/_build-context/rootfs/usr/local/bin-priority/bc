#!/bin/bash
set -o errexit    # 对应 -e
set -o nounset    # 对应 -u
set -o pipefail   # 对应 -o pipefail

# @verify: bc -v

if false; then
#-------------------------------------------------------------------------------------------------------------
# bc: 任意精度计算器语言
# 示例：
echo '2 + 3' | bc                     # 基本算术
echo 'scale=4; 10 / 3' | bc           # 指定小数精度
echo '2 ^ 10' | bc                    # 幂运算
echo 'sqrt(144)' | bc -l              # 数学库函数
echo 'obase=16; 255' | bc             # 十进制转十六进制
#-------------------------------------------------------------------------------------------------------------
fi

exec _apt-shim-exec bc bc "$@"
