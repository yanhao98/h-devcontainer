#!/bin/bash
set -o errexit
set -o nounset
set -o pipefail

# pnpm shim: 自动检测并安装 pnpm，然后执行
# @verify: pnpm --version

source /devcontainer/shim-utils.sh
_print_caller_info

pnpm_bin="$(_get-real-bin --silent pnpm)"

if [ -z "$pnpm_bin" ]; then
    echo "⚠️  pnpm 未安装，正在自动安装..." >&2
    # 重定向到 stderr，避免安装输出污染 stdout（其他工具可能捕获 pnpm 的 stdout 来获取版本信息）
    h-setup-pnpm-bin >&2
fi

exec _exec-real-bin pnpm "$@"
