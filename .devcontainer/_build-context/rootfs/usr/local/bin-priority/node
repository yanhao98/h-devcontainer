#!/bin/bash
set -o errexit
set -o nounset
set -o pipefail

# node shim: 自动检测并安装 Node.js，然后执行

source /devcontainer/shim-utils.sh
_print_caller_info

node_bin="$(_get-real-bin node || true)"

if [ -z "$node_bin" ]; then
    echo "⚠️  Node.js 未安装，正在自动安装..." >&2
    # 重定向到 stderr，避免安装输出污染 stdout（pnpm 等工具会捕获 node 的 stdout 来获取版本信息）
    h-setup-node-bin >&2
    node_bin="$(_get-real-bin node || true)"
    if [ -z "$node_bin" ]; then
        echo "❌ Node.js 安装失败" >&2
        exit 1
    fi
fi

echo -e "\e[90m→ exec $node_bin\e[0m" >&2
exec "$node_bin" "$@"
