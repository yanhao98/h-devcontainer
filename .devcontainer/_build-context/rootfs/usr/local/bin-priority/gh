#!/bin/bash
set -o errexit    # 对应 -e
set -o nounset    # 对应 -u
set -o pipefail   # 对应 -o pipefail

if false; then
#-------------------------------------------------------------------------------------------------------------
# 示例：
gh auth status
gh auth login
#-------------------------------------------------------------------------------------------------------------
fi

mkdir -p /vscode/gh-home
# 检查软链接是否已正确建立，如果是则跳过
if [ -L "$HOME/.gh" ] && [ "$(readlink "$HOME/.gh")" = "/vscode/gh-home" ]; then
    : # 软链接已正确建立，跳过
else
    if [ -d "$HOME/.gh" ]; then
        rm -rf "$HOME/.gh"
    fi
    ln -sfn /vscode/gh-home ~/.gh
fi

if ! dpkg --status gh &>/dev/null; then
  # 创建临时 apt 配置，启用锁等待（-1 表示无限等待）
  APT_WAIT_CONF=$(mktemp)
  echo 'DPkg::Lock::Timeout "-1";' > "$APT_WAIT_CONF"
  export APT_CONFIG="$APT_WAIT_CONF"
  
  # -E 选项：保留（preserve）当前的环境变量
  sudo -E _execute-remote-script https://Git.1-H.CC/Scripts/Linux/raw/branch/2026/devcontainer/apt-install-with-cache.sh \
    gh
  
  rm -f "$APT_WAIT_CONF"
fi

# 跳过自身，找到真实的 gh 可执行文件
real_gh=$(which -a gh | grep -v '/usr/local/bin-priority/' | head -n1)
exec "$real_gh" "$@"