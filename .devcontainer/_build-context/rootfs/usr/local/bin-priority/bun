#!/bin/bash
set -o errexit
set -o nounset
set -o pipefail

# bun shim: 自动检测并安装 Bun，然后执行
# @verify: bun --version

source /devcontainer/shim-utils.sh
_print_caller_info

bun_bin="$(_get-real-bin --silent bun)"

if [ -z "$bun_bin" ]; then
    echo "⚠️  Bun 未安装，正在自动安装..." >&2
    # 重定向到 stderr，避免安装输出污染 stdout（其他工具可能捕获 bun 的 stdout 来获取版本信息）
    h-setup-bun-bin >&2
fi

exec _exec-real-bin bun "$@"
